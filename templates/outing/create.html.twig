{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/composants/headers.css') }}">
    <link rel="stylesheet" href="{{ asset('style/composants/form.css') }}">
    <link rel="stylesheet" href="{{ asset('style/composants/buttons.css') }}">
    <link rel="stylesheet" href="{{ asset('style/composants/checkbox.css') }}">
    <link rel="stylesheet" href="{{ asset('style/composants/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('style/composants/card.css') }}">
{% endblock %}

{% block javascripts %}
     <script src="{{ asset('js/outing-create.js') }}"></script>
{% endblock %}

{% block body %}
    {{ parent() }}



    {{ form_start(outingForm) }}
    {{ form_errors(outingForm) }}
    <div class="panel-form-outing">
        <h1>Cr√©er une sortie</h1>
        <div class="column left">

                {{ form_row(outingForm.name) }}
                {{ form_row(outingForm.dateBegin) }}
                {{ form_row(outingForm.dateEnd) }}
            <div class="doubleInputContainer">
                <div class="left smallInput">{{ form_row(outingForm.maxRegistration) }}</div>
                <div class="right smallInput">{{ form_row(outingForm.duration) }}</div>
            </div>
                 {{ form_row(outingForm.description) }}
        </div>
        <div class="column right">
            <h3 class="primaryInformation">Ville organisatrice : {{ userSite.name }}</h3>
                    {{ form_row(outingForm.city) }}
                    {{ form_row(outingForm.location) }}
            <h3 class="secondaryInformation">Rue : <span id="street"></span></h3>
            <h3 class="secondaryInformation">Code postal : <span id="postalCode"></span> </h3>
            <h3 class="secondaryInformation">Latitude : <span id="latitude"></span></h3>
            <h3 class="secondaryInformation">Longitude : <span id="longitude"></span></h3>
        </div>
    </div>
        {{ form_row(outingForm.save) }}
        {{ form_row(outingForm.saveAndAdd) }}
        <a href="{{ path('outing') }}" class="button">Annuler</a>


        {{ form_end(outingForm) }}


{% endblock %}
