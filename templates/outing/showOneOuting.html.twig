{% extends 'base.html.twig' %}

{% block body %}

    <h1> Afficher une sortie</h1>


    <div>
        <p>Nom de la sortie : </p>  <p> {{ outing.name }}</p>
    </div>

    <div>
        <p>Date et Heure de la sortie :  </p>   <p> {{ outing.dateBegin|date('d-m-y') }}  </p>

    </div>

    <div>
        <p>Date limite d'inscription :  </p>   <p> {{ outing.dateEnd|date('d-m-y')}}  </p>

    </div>

    <div>
        <p>Nombre de places :  </p>   <p> {{ outing.maxRegistration}} </p>

